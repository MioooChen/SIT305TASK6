<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000"/> <!-- Semi-transparent black color for the shadow -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <!-- Gradient Background -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="#0084FE"
                android:endColor="#0162EF"
                android:angle="0"/>
            <corners
                android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
